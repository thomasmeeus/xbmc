<advancedsettings>
    <loglevel hide="false"><%= node["xbmc"]["loglevel"] %></loglevel>
    <gui>
        <algorithmdirtyregions><%= node["xbmc"]["algorithmdirtyregions"] %></algorithmdirtyregions>
        <visualizedirtyregions><%= node["xbmc"]["visualizedirtyregions"] %></visualizedirtyregions>
        <nofliptimeout><%= node["xbmc"]["nofliptimeout"] %></nofliptimeout>
    </gui>
    <showexitbutton><%= node["xbmc"]["showexitbutton"] %></showexitbutton>
    <useddsfanart><%= node["xbmc"]["useddsfanart"] %></useddsfanart>
    <cputempcommand><%= node["xbmc"]["cputempcommand"] %></cputempcommand>
    <gputempcommand><%= node["xbmc"]["gputempcommand"] %></gputempcommand>

    <% if node['xbmc']['usemysql'] -%>
       <videodatabase>
           <type>mysql</type>
           <host><%= node['mysql']['bind_address'] %></host>
           <port>3306</port>
           <user><%= node['xbmc']['mysql']['username'] %></user>
           <pass><%= node['xbmc']['mysql']['password'] %></pass>
           <name>MyVideos</name>
       </videodatabase>

       <musicdatabase>
           <type>mysql</type>
           <host><%= node['mysql']['bind_address'] %></host>
           <port>3306</port>
           <user><%= node['xbmc']['mysql']['username'] %></user>
           <pass><%= node['xbmc']['mysql']['password'] %></pass>
           <name>MyMusic</name>
       </musicdatabase>

    </advancedsettings>
    <% end -%>
